[extensions]
pager=
hgext.convert=
hgext.extdiff=
hgext.graphlog=
hgext.color=
hgext.progress=
hgext.highlight=
hgext.churn=
mq =

hgshelve=~/.hgext/hgshelve/hgshelve.py

# https://bitbucket.org/yujiewu/hgflow/wiki/Home
hgflow=~/.hgext/hgflow/src/hgflow.py

[pager]
pager = LESS='FRX' less

[ui]
ignore = ~/.dotfiles/.hgignore
editor = vim

[flow]
autoshelve = true

# Put the content below in ~/.hgcredentials
