#!/bin/bash
source ~/.dotfiles/colors.sh
source ~/.dotfiles/cool-prompt.sh

for dir in ./*/
do
    cd ${dir%*/}
    curr_dir=${dir:2}
    if ! is_hg_repository; then
        echo 'Not a hg repo' ${curr_dir}
    else
        eval_hg_repo
        echo ${state}${curr_dir}${COLOR_NONE}${hg_remote}${BLUE}\
            ${hg_shelve_status}
    fi
    cd ..
done
